<%- include('partials/header.ejs') %>

<form action="/compose-employee" method="post">

    <h1>Compose Page</h1>

    <div class="form-group" id="compose">
        <label for="title">Name</label>
        <input class="form-control" type="text" name="name" required>

        <label for="title">Surname</label>
        <input class="form-control" type="text" name="surname" required>

        <label for="title">Father's Name</label>
        <input class="form-control" type="text" name="fathername" required>

        <div class="input-group mb-3">
            <div class="input-group-append">
                <label class="input-group-text" for="inputGroupSelect02">Options</label>
            </div>
            <select class="custom-select" id="inputGroupSelect01" name="workfield" required>
                <option disabled>Choose the field of work...</option>
                <option value="Marketing">Marketing</option>
                <option value="Supply">Supply</option>
                <option value="Accountant">Accountant</option>
            </select>
        </div>
    </div>

    <button class="btn" type="submit">Publish</button>

</form>

